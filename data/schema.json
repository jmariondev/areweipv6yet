{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["services"],
  "properties": {
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "url", "category", "ipv6"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" },
          "type": { 
            "type": "string", 
            "enum": ["service", "cloud"],
            "default": "service"
          },
          "category": { "type": "string" },
          "description": { "type": "string" },
          "cloud_services": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "ipv6_status": { "enum": ["full", "partial", "none", "unknown"] },
                "notes": { "type": "string" }
              }
            }
          },
          "ipv6": {
            "type": "object",
            "required": ["status", "tests"],
            "properties": {
              "status": { "enum": ["unknown", "none", "partial", "full"] },
              "tests": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["id", "name", "result"],
                  "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "description": { "type": "string" },
                    "result": { "type": ["boolean", "null"] },
                    "last_checked": { "type": ["string", "null"] }
                  }
                }
              },
              "notes": { "type": "string" },
              "last_checked": { "type": ["string", "null"] },
              "last_manual_verification": { "type": ["string", "null"] }
            }
          }
        }
      }
    }
  }
}